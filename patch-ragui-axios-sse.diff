+// src/lib/http-axios.js
+// Client HTTP basé sur Axios avec intercepteurs pour latence et corrélation.
+import axios from 'axios'
+import { useNetStore } from '@/stores/net'
+
+const BASE = (import.meta.env.VITE_API_BASE_URL || '').replace(/\/$/, '')
+
+export const api = axios.create({
+  baseURL: BASE || undefined,
+  headers: { 'Accept': 'application/json' },
+  withCredentials: false,
+})
+
+// Intercepteurs: mesure et corrélation
+api.interceptors.request.use(cfg => {
+  const net = useNetStore()
+  // Correlation ID côté client (lisible dans les logs serveur)
+  const rid = crypto?.randomUUID?.() || String(Math.random()).slice(2)
+  cfg.headers['X-Request-Id'] = rid
+  cfg.metadata = { t0: performance.now(), rid }
+  net._onRequest({ url: cfg.url, method: cfg.method || 'GET', rid })
+  return cfg
+})
+
+api.interceptors.response.use(
+  resp => {
+    const net = useNetStore()
+    const t1 = performance.now()
+    const ms = t1 - (resp.config.metadata?.t0 || t1)
+    const rid = resp.config.metadata?.rid || resp.headers['x-request-id'] || ''
+    const trace = resp.headers['traceparent'] || resp.headers['x-trace-id'] || ''
+    net._onResponse({
+      url: resp.config.url || '',
+      status: resp.status,
+      ms,
+      rid,
+      trace,
+    })
+    return resp
+  },
+  err => {
+    const net = useNetStore()
+    const t1 = performance.now()
+    const ms = t1 - (err.config?.metadata?.t0 || t1)
+    net._onResponse({
+      url: err.config?.url || '',
+      status: err.response?.status || 0,
+      ms,
+      rid: err.config?.metadata?.rid || '',
+      trace: err.response?.headers?.['traceparent'] || '',
+    })
+    return Promise.reject(err)
+  }
+)
+
+export const httpAxios = {
+  async get(path, opts={}) {
+    const res = await api.get(path, { params: opts?.params, headers: opts?.headers })
+    return res.data
+  },
+  async post(path, body, opts={}) {
+    const res = await api.post(path, body, { params: opts?.params, headers: opts?.headers })
+    return res.data
+  }
+}

