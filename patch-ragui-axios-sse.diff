+// src/stores/net.js
+import { defineStore } from 'pinia'
+
+export const useNetStore = defineStore('net', {
+  state: () => ({
+    last: { url: '', method: '', status: 0, ms: 0, rid: '', trace: '' },
+    history: [],
+    _max: 50,
+  }),
+  actions: {
+    _onRequest({ url, method, rid }) {
+      this.last = { url, method, status: 0, ms: 0, rid, trace: '' }
+    },
+    _onResponse({ url, status, ms, rid, trace }) {
+      this.last = { url, method: this.last.method || 'GET', status, ms, rid, trace }
+      this.history.push({ at: new Date().toISOString(), ...this.last })
+      if (this.history.length > this._max) this.history.shift()
+    },
+    clear() { this.history = [] }
+  }
+})

